<UserControl
    x:Class="Ciribob.DCS.SimpleRadio.Standalone.Client.UI.ClientWindow.ClientSettingsControl.RadioChannelConfigUi"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="RadioChannelConfig"
    d:DesignHeight="50"
    d:DesignWidth="200"
    mc:Ignorable="d">
    <StackPanel Margin="3">
        <Slider Name="ChannelSelector"
                Maximum="1.0"
                Minimum="-1.0"
                Value="{Binding ElementName=RadioChannelConfig, Path=VolumeValue, Mode=TwoWay}"
                TickPlacement="BottomRight"
                SmallChange="0.1"
                LargeChange="0.3"
                IsSnapToTickEnabled="True"
                TickFrequency="0.1" />

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" FontSize="10" Content="Left" HorizontalAlignment="Left" />
            <Label Grid.Column="1" FontSize="10" Content="Equal" HorizontalAlignment="Center" />
            <Label Grid.Column="2" FontSize="10" Content="Right" HorizontalAlignment="Right" />
        </Grid>
    </StackPanel>
</UserControl>