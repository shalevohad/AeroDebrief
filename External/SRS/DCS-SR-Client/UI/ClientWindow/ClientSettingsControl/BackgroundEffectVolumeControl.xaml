<UserControl
    x:Class="Ciribob.DCS.SimpleRadio.Standalone.Client.UI.ClientWindow.ClientSettingsControl.BackgroundEffectVolumeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800"
    Name="EffectsVolumeControl">
    <StackPanel
        Margin="10">

        <Slider x:Name="EffectVolume"
                TickPlacement="BottomRight"
                SmallChange="5"
                LargeChange="10"
                IsSnapToTickEnabled="True"
                TickFrequency="10"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                Minimum="0"
                Maximum="{Binding MaximumPercentage, RelativeSource={RelativeSource AncestorType=UserControl}}"
                Value="{Binding ElementName=EffectsVolumeControl, Path=VolumeValue, Mode=TwoWay}" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" FontSize="10" Content="0%" HorizontalAlignment="Left" />
            <Label Grid.Column="1" FontSize="10"
                   Content="{Binding HalfMaximumPercentage, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0}%}"
                   HorizontalAlignment="Center" />
            <Label Grid.Column="2" FontSize="10"
                   Content="{Binding MaximumPercentage, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat={}{0}%}"
                   HorizontalAlignment="Right" />
        </Grid>

    </StackPanel>
</UserControl>