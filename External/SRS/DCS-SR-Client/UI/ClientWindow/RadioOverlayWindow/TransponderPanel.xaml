<UserControl x:Class="Ciribob.DCS.SimpleRadio.Standalone.Client.UI.ClientWindow.RadioOverlayWindow.TransponderPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:p="clr-namespace:Ciribob.DCS.SimpleRadio.Standalone.Client.Properties"
             Name="IFFContainer"
             Width="170"
             Height="40">
    <StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock x:Name="Transponder"
                       Margin="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontSize="10"
                       Foreground="#E7E7E7"
                       Padding="0,0,0,0"
                       Style="{x:Null}"
                       Text="{x:Static p:Resources.OverlayTransponder}"
                       TextAlignment="Center" />
            <Ellipse x:Name="TransponderActive"
                     Width="12"
                     Height="12"
                     Margin="2"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Center"
                     Fill="#FF9900"
                     MouseDown="TransponderPowerClick"
                     Stroke="Black"
                     Style="{x:Null}"
                     ToolTip="{x:Static p:Resources.ToolTipTransponder}" />
        </StackPanel>

        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="Mode1"
                     Width="28"
                     FontSize="16"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Background="Black"
                     Foreground="#00FF00"
                     Style="{x:Null}"
                     Text="00"
                     TextAlignment="Center"
                     BorderThickness="0"
                     TextWrapping="NoWrap" />
            <Separator Width="5" />
            <TextBox x:Name="Mode3"
                     Width="40"
                     FontSize="16"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Background="Black"
                     Foreground="#00FF00"
                     Style="{x:Null}"
                     Text="0000"
                     TextAlignment="Center"
                     TextWrapping="NoWrap"
                     BorderThickness="0" />

            <Button x:Name="Mode2Button"
                    Width="20"
                    FontSize="10"
                    Height="20"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Center"
                    Content="M2"
                    IsEnabled="False"
                    Visibility="Collapsed"
                    Foreground="Black"
                    Style="{StaticResource DarkStyle-Button}"
                    ToolTip="{x:Static p:Resources.ToolTipTransponderMode2}" />
            <Button x:Name="Mode4Button"
                    Width="20"
                    FontSize="10"
                    Height="20"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Center"
                    Content="M4"
                    IsEnabled="False"
                    Foreground="Black"
                    Style="{StaticResource DarkStyle-Button}"
                    Click="Mode4ButtonOnClick"
                    ToolTip="{x:Static p:Resources.ToolTipTransponderMode4}" />
            <Button x:Name="Ident"
                    Width="35"
                    FontSize="10"
                    Height="20"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Center"
                    Content="{x:Static p:Resources.BtnTransponderIDENT}"
                    IsEnabled="False"
                    Foreground="Black"
                    Click="IdentButtonOnClick"
                    Style="{StaticResource DarkStyle-Button}"
                    ToolTip="{x:Static p:Resources.ToolTipTransponderMode4}" />

        </WrapPanel>

    </StackPanel>
</UserControl>