<UserControl x:Class="Ciribob.DCS.SimpleRadio.Standalone.Client.UI.ClientWindow.InputSettingsControl.InputSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:inputSettingsControl="clr-namespace:Ciribob.DCS.SimpleRadio.Standalone.Client.UI.ClientWindow.InputSettingsControl"
             mc:Ignorable="d"
             Width="575"
             d:DesignHeight="450" d:DesignWidth="575">
    <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Visible">
        <StackPanel Orientation="Vertical">
            <Button Width="150px" Content="Rescan Input Devices" Click="Rescan_OnClick" />

            <StackPanel Orientation="Horizontal">
                <Label
                    Margin="305,0,0,0"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Content="Device" />

                <Label
                    Margin="70,0,0,0"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Content="Button" />
            </StackPanel>


            <inputSettingsControl:InputBindingControl x:Name="Radio1"
                                                      ControlInputBinding="Switch1"
                                                      InputName="Radio 1" />
            <inputSettingsControl:InputBindingControl x:Name="Radio2"

                                                      ControlInputBinding="Switch2"
                                                      InputName="Radio 2" />
            <inputSettingsControl:InputBindingControl x:Name="Radio3"
                                                      ControlInputBinding="Switch3"
                                                      InputName="Radio 3" />


            <inputSettingsControl:InputBindingControl x:Name="PTT"
                                                      ControlInputBinding="Ptt"
                                                      InputName="Common PTT" />
            <inputSettingsControl:InputBindingControl x:Name="Intercom"
                                                      ControlInputBinding="Intercom"
                                                      InputName="Intercom Select" />

            <inputSettingsControl:InputBindingControl x:Name="IntercomPTT"
                                                      ControlInputBinding="IntercomPTT"
                                                      InputName="Special Intercom Select &amp; PTT" />

            <inputSettingsControl:InputBindingControl x:Name="RadioOverlay"
                                                      ControlInputBinding="OverlayToggle"
                                                      InputName="Overlay Toggle" />

            <inputSettingsControl:InputBindingControl x:Name="Radio4"
                                                      ControlInputBinding="Switch4"
                                                      InputName="Radio 4" />
            <inputSettingsControl:InputBindingControl x:Name="Radio5"
                                                      ControlInputBinding="Switch5"
                                                      InputName="Radio 5" />
            <inputSettingsControl:InputBindingControl x:Name="Radio6"
                                                      ControlInputBinding="Switch6"
                                                      InputName="Radio 6" />

            <inputSettingsControl:InputBindingControl x:Name="Radio7"
                                                      ControlInputBinding="Switch7"
                                                      InputName="Radio 7" />

            <inputSettingsControl:InputBindingControl x:Name="Radio8"
                                                      ControlInputBinding="Switch8"
                                                      InputName="Radio 8" />

            <inputSettingsControl:InputBindingControl x:Name="Radio9"
                                                      ControlInputBinding="Switch9"
                                                      InputName="Radio 9" />

            <inputSettingsControl:InputBindingControl x:Name="Radio10"
                                                      ControlInputBinding="Switch10"
                                                      InputName="Radio 10" />


            <inputSettingsControl:InputBindingControl x:Name="Up100"
                                                      ControlInputBinding="Up100"
                                                      InputName="Up 100MHz" />

            <inputSettingsControl:InputBindingControl x:Name="Up10"
                                                      ControlInputBinding="Up10"
                                                      InputName="Up 10MHz" />

            <inputSettingsControl:InputBindingControl x:Name="Up1"
                                                      ControlInputBinding="Up1"
                                                      InputName="Up 1MHz" />

            <inputSettingsControl:InputBindingControl x:Name="Up01"
                                                      ControlInputBinding="Up01"
                                                      InputName="Up 0.1MHz" />

            <inputSettingsControl:InputBindingControl x:Name="Up001"
                                                      ControlInputBinding="Up001"
                                                      InputName="Up 0.01MHz" />

            <inputSettingsControl:InputBindingControl x:Name="Up0001"
                                                      ControlInputBinding="Up0001"
                                                      InputName="Up 0.001MHz" />


            <inputSettingsControl:InputBindingControl x:Name="Down100"
                                                      ControlInputBinding="Down100"
                                                      InputName="Down 100MHz" />

            <inputSettingsControl:InputBindingControl x:Name="Down10"
                                                      ControlInputBinding="Down10"
                                                      InputName="Down 10MHz" />

            <inputSettingsControl:InputBindingControl x:Name="Down1"
                                                      ControlInputBinding="Down1"
                                                      InputName="Down 1MHz" />

            <inputSettingsControl:InputBindingControl x:Name="Down01"
                                                      ControlInputBinding="Down01"
                                                      InputName="Down 0.1MHz" />

            <inputSettingsControl:InputBindingControl x:Name="Down001"
                                                      ControlInputBinding="Down001"
                                                      InputName="Down 0.01MHz" />

            <inputSettingsControl:InputBindingControl x:Name="Down0001"
                                                      ControlInputBinding="Down0001"
                                                      InputName="Down 0.001MHz" />

            <inputSettingsControl:InputBindingControl x:Name="ToggleGuard"
                                                      ControlInputBinding="ToggleGuard"
                                                      InputName="Toggle Guard" />

            <inputSettingsControl:InputBindingControl x:Name="NextRadio"
                                                      ControlInputBinding="NextRadio"
                                                      InputName="Next Radio" />


            <inputSettingsControl:InputBindingControl x:Name="PreviousRadio"
                                                      ControlInputBinding="PreviousRadio"
                                                      InputName="Previous Radio" />

            <inputSettingsControl:InputBindingControl x:Name="ToggleEncryption"
                                                      ControlInputBinding="ToggleEncryption"
                                                      InputName="Toggle Encryption" />

            <inputSettingsControl:InputBindingControl x:Name="EncryptionKeyIncrease"
                                                      ControlInputBinding="EncryptionKeyIncrease"
                                                      InputName="Encryption Key Increase" />

            <inputSettingsControl:InputBindingControl x:Name="EncryptionKeyDecrease"
                                                      ControlInputBinding="EncryptionKeyDecrease"
                                                      InputName="Encryption Key Decrease" />

            <inputSettingsControl:InputBindingControl x:Name="RadioChannelUp"
                                                      ControlInputBinding="RadioChannelUp"
                                                      InputName="Radio Channel Up" />

            <inputSettingsControl:InputBindingControl x:Name="RadioChannelDown"
                                                      ControlInputBinding="RadioChannelDown"
                                                      InputName="Radio Channel Down" />

            <inputSettingsControl:InputBindingControl x:Name="TransponderIDENT"
                                                      ControlInputBinding="TransponderIDENT"
                                                      InputName="Transponder IDENT" />

            <inputSettingsControl:InputBindingControl x:Name="RadioVolumeUp"
                                                      ControlInputBinding="RadioVolumeUp"
                                                      InputName="Radio Volume Up" />

            <inputSettingsControl:InputBindingControl x:Name="RadioVolumeDown"
                                                      ControlInputBinding="RadioVolumeDown"
                                                      InputName="Radio Volume Down" />

            <inputSettingsControl:InputBindingControl x:Name="AwacsOverlayToggle"
                                                      ControlInputBinding="AwacsOverlayToggle"
                                                      InputName="AWACS Overlay Toggle" />


        </StackPanel>
    </ScrollViewer>
</UserControl>