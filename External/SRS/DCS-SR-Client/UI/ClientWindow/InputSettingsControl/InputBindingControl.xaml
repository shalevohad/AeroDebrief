<UserControl
    x:Class="Ciribob.DCS.SimpleRadio.Standalone.Client.UI.ClientWindow.InputSettingsControl.InputBindingControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="100"
    d:DesignWidth="500"
    mc:Ignorable="d">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="160" />
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />

        </Grid.RowDefinitions>

        <Label x:Name="DeviceLabel"
               Grid.Row="0"
               Grid.Column="0"
               VerticalContentAlignment="Center"
               Content="Control" />
        <TextBox x:Name="Device"
                 Grid.Row="0"
                 Grid.Column="1"
                 TextAlignment="Center"
                 IsEnabled="False"
                 Text="None" />
        <TextBox x:Name="DeviceText"
                 Grid.Row="0"
                 Grid.Column="2"

                 IsEnabled="False"
                 Text="None"
                 TextAlignment="Center" />
        <Button x:Name="DeviceButton"
                Grid.Row="0"
                Grid.Column="3"
                Click="Device_Click"
                Content="Set " />
        <Button x:Name="DeviceClear"
                Grid.Row="0"
                Grid.Column="4"
                Click="DeviceClear_Click"
                Content="Clear" />

        <Label x:Name="ModifierLabel"
               Grid.Row="1"
               Grid.Column="0"
               VerticalContentAlignment="Center"
               Content="Control" />
        <TextBox x:Name="ModifierDevice"
                 Grid.Row="1"
                 Grid.Column="1"
                 VerticalContentAlignment="Center"
                 IsEnabled="False"
                 Text="None"
                 TextAlignment="Center" />
        <TextBox x:Name="ModifierText"
                 Grid.Row="1"
                 Grid.Column="2"
                 VerticalContentAlignment="Center"
                 IsEnabled="False"
                 Text="None"
                 TextAlignment="Center" />
        <Button x:Name="ModifierButton"
                Grid.Row="1"
                Grid.Column="3"
                Click="Modifier_Click"
                Content="Set " />
        <Button x:Name="ModifierButtonClear"
                Grid.Row="1"
                Grid.Column="4"
                Click="ModifierClear_Click"
                Content="Clear" />

    </Grid>


</UserControl>