<Window x:Class="Installer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Installer"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="DCS-SRS Installer"
        Width="477.346"
        Height="408.114"
        ResizeMode="NoResize"
        mc:Ignorable="d">
    <Grid Name="containerPanel" Margin="0,0,4,0">
        <Label x:Name="intro"
               Margin="10,3,10,0"
               VerticalAlignment="Top"
               Content="SimpleRadio Standalone Installer -"
               FontSize="20" />

        <Label x:Name="step2"
               Margin="10,45,10,0"
               VerticalAlignment="Top"
               Content="Step 1: Pick Install Location"
               FontSize="20" />

        <TextBox x:Name="srPath"
                 Width="330"
                 Height="23"
                 Margin="10,87,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Text="C:\ProgramData\DCS-SimpleRadio-Standalone"
                 TextWrapping="Wrap" />
        <Button x:Name="srPathButton"
                Width="75"
                Margin="365,87,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="Set_Install_Path"
                Content="Locate" />

        <Label x:Name="step3"
               Margin="10,120,10,0"
               VerticalAlignment="Top"
               Content="Step 2: Locate Saved Games Folder - Not DCS"
               FontSize="20" />


        <TextBox x:Name="dcsScriptsPath"
                 Width="330"
                 Height="23"
                 Margin="10,197,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Text="Saved Games"
                 TextWrapping="Wrap" />
        <Button x:Name="dcsPathButton"
                Width="75"
                Margin="365,198,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="Set_Scripts_Path"
                Content="Locate" />

        <CheckBox x:Name="CreateStartMenuShortcut"
                  Content="Create Start menu shortcut"
                  HorizontalAlignment="Center"
                  Width="165"
                  Height="20"
                  Margin="146,300,133,37"
                  IsChecked="True" />

        <Button x:Name="InstallButton"
                Width="197"
                Margin="17,347,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="InstallReleaseButton"
                Content="Install / Update DCS-SRS" />
        <GridSplitter x:Name="gridSplitter"
                      Width="5"
                      Height="20"
                      Margin="232,347,0,0"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top" />
        <Button x:Name="RemoveButton"
                Width="206"
                Margin="251,347,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="Remove_Plugin"
                Content="Remove DCS-SRS" />
        <Label x:Name="step4"
			   Width="447"
               Height="40"
               Margin="10,223,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Step 3: Install Or Remove DCS-SRS"
               FontSize="20" />
        <CheckBox x:Name="InstallScriptsCheckbox"
            Content="Install DCS Client Scripts - Only required for SRS Client NOT Server Only Installs"
            Height="20"
            Margin="17,150,10,197"
            IsChecked="True"
            Checked="InstallScriptsCheckbox_OnChecked"
            Unchecked="InstallScriptsCheckbox_OnUnchecked"/>
        <TextBlock Width="438"
                   IsEnabled="False"
            Height="50"
            Margin="10,257,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="12"
            TextWrapping="Wrap"
            ><Run x:Name="ServerNote"
				  Text="Please Note: Server installs will need to manually install the DCS-SRS-AutoConnectGameGUI.lua - found in the SRS Install Location in the Scripts folder. Installation instructions are in the file."/></TextBlock>

    </Grid>
</Window>