<UserControl x:Class="AeroDebrief.UI.Views.Analytics.PresenceGraphView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600"
             Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title and Controls -->
        <Border Grid.Row="0" Background="#F5F5F5" Padding="12,8" Margin="0,0,0,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                         Text="Presence Network Graph" 
                         FontSize="16" 
                         FontWeight="SemiBold"
                         Foreground="#333333"
                         VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <CheckBox Content="Group Highlight" 
                            IsChecked="{Binding ShowGroupHighlight}"
                            Foreground="#333333"
                            VerticalAlignment="Center"
                            Margin="0,0,12,0"/>
                    <CheckBox Content="Show Tooltips" 
                            IsChecked="{Binding ShowTooltips}"
                            Foreground="#333333"
                            VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Canvas for Network Visualization -->
        <Border Grid.Row="1" Background="White" ClipToBounds="True">
            <Canvas x:Name="PresenceCanvas" 
                   Background="Transparent"
                   MouseMove="Canvas_MouseMove"
                   MouseLeave="Canvas_MouseLeave"/>
        </Border>

        <!-- Placeholder when no data -->
        <Border Grid.Row="1" 
               Background="Transparent"
               Visibility="{Binding HasData, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            <TextBlock Text="No frequency data available&#x0a;Select frequencies and play audio to visualize connections"
                     FontSize="14"
                     Foreground="#999999"
                     TextAlignment="Center"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
